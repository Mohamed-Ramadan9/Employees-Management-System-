@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityUser>

@{
    ViewData["Title"] = "System Users";
}

<p>
    <a asp-action="Create" class="btn  btn-primary mt-2"> <i class="fa fa-plus"></i>Add User </a>
</p>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Users List</h3>
    </div>

    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                       Serial No
                    </th>
                    <th>
                         Email
                    </th>
                    <th>
                       Username
                    </th>
                    <th>
                       Phone Number
                    </th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NormalizedUserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                     
                        <td class="dropdown ">
                            <button class="btn btn-warning dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                Action
                            </button>
                            <ul class="dropdown-menu">
                          

                            </ul>
                        </td>


                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>