@model IEnumerable<Employee_Management_System.Models.LeaveApplication>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" class="btn  btn-primary mt-2"> <i class="fa fa-plus"></i>Add New Leave Application</a>
</p>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Leave Applications List</h3>
    </div>

    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoOfDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeaveType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attachment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Action</th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeaveType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attachment)
            </td>
            <td style="color:steelblue">
                @Html.DisplayFor(modelItem => item.Status.Description)
            </td>
                        <td class="dropdown ">
                            <button class="btn btn-warning dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                Action
                            </button>
                            <ul class="dropdown-menu">
                                <li><a asp-action="Edit" asp-route-id="@item.Id" class="dropdown-item"><i class="fa fa-pen"></i> Edit</a></li>
                                <li><a asp-action="Details" asp-route-id="@item.Id" class="dropdown-item"><i class="fa fa-eye"></i> View</a></li>
                                <li><a asp-action="Delete" asp-route-id="@item.Id" class="dropdown-item "><i class="fa fa-trash"></i> Delete</a></li>
                                <li><a asp-action="ApproveLeaveApplication" asp-route-id="@item.Id" class="dropdown-item"><i class="fa fa-check"></i> Approve</a></li>
                                <li><a asp-action="RejectLeave" asp-route-id="@item.Id" class="dropdown-item"><i class="fa fa-times"></i> Reject</a></li>
                            </ul>
                        </td>

            
           </tr>
    }
    </tbody>
</table>
</div>
</div>