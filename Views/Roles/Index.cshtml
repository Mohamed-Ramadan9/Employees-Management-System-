
@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "System Roles";
}

<p>
    <a asp-action="Create" class="btn  btn-primary mt-2"> <i class="fa fa-plus"></i>Add New Role </a>
</p>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Roles List</h3>
    </div>

    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                       Role No
                    </th>
                    <th>
                        Role Name
                    </th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                        <tr>
                            <td>
                            @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                            @Html.DisplayFor(modelItem => item.Name)
                            </td>

                            <td class="dropdown ">
                                <button class="btn btn-warning dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                    Action
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a asp-action="Edit" asp-route-id="@item.Id" class="dropdown-item"><i class="fa fa-pen"></i> Edit</a></li>

                                </ul>
                            </td>


                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>